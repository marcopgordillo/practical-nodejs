extends layout
block page
  - var menu = 'login'
block content
  .col-md-4.col-md-offset-4
    h2 Log in
    div= error
    div
      form(action="/login", method="POST")
        .form-group
          label(for="email") Email
          input#email.form-control(name="email", type="text", placeholder="hi@node.university")
        .form-group
          label(for="password") Password
          input#password.form-control(name="password", type="password", placeholder="***")
        .form-group
          button.btn.btn-lg.btn-primary.btn-block(type="submit") Log in
          